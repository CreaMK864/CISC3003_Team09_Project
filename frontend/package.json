{
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "http-server": "^14.1.1"
  },
  "scripts": {
    "start": "http-server ./public",
    "dev": "live-server ./public --port=3000",
    "lint": "eslint .",
    "format": "prettier --write .",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "!(*.css|*.js|*.jsx)": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "eslint": "^9.24.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "live-server": "^1.2.2",
    "prettier": "^3.5.3"
  }
}
